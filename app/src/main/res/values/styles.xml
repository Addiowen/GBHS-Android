<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>
</resources>
