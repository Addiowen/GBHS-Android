<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".GBHS">

    <Space
        android:id="@+id/dummy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true" />

    <CalendarView
        android:id="@+id/gridCal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dummy"
        android:choiceMode="none"
        android:gravity="center"
        android:numColumns="7"
        android:selectedWeekBackgroundColor="@color/myPrimaryDarkColor"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/lstInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnCal"
        android:layout_below="@+id/dummy"
        android:gravity="center"
        android:paddingTop="32dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progCalendar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btnCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_action_open_in_browser"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_action_open_in_browser"
        android:text="@string/CalendarWeb" />

    <TextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_action_event"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_event"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/NoCalendar"
        android:visibility="gone" />


</RelativeLayout>
