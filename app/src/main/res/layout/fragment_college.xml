<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myAccentColor"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.grandblanchs.gbhs.CollegeFragment">

    <ImageView
        android:id="@+id/imgGBEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:paddingBottom="16dp"
        android:scaleType="center"
        android:src="@drawable/img_gbec" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCollege"
        android:layout_below="@+id/imgGBEC">

        <TextView
            android:id="@+id/txtCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/GBEC"
            android:textColor="@android:color/black" />
    </ScrollView>

    <Button
        android:id="@+id/btnCollege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scrollView"
        android:drawableLeft="@drawable/ic_action_open_in_browser"
        android:text="@string/LearnMore"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>
