<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".About">

    <Space
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/imgAbout"
                android:gravity="center"
                android:src="@drawable/drawer_header"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/txtDev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Dev" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:autoLink="email"
                android:linksClickable="true"
                android:text="@string/AppEmail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_action_email"
                android:drawableStart="@drawable/ic_action_email"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/txtMail" />

            <TextView
                android:id="@+id/txtLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/TeamLeader" />

            <TextView
                android:id="@+id/txtLeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/TeamLeaderName" />

            <TextView
                android:id="@+id/txtLeaderSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/TeamLeaderSubtitle" />


            <TextView
                android:id="@+id/txtSecondYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/SecondYearMembers" />

            <TextView
                android:id="@+id/txtSYD1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtSYD2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtFirstYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/FirstYearMembers" />

            <TextView
                android:id="@+id/txtFYD1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtFYD2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtFYD3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="center"
                android:id="@+id/txtVersion" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>


