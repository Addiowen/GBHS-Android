<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.grandblanchs.gbhs.Home">

    <!-- Empty layout (0x0 dp) centered horizontally -->
    <Space android:id="@+id/dummy1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <!-- Empty layout (0x0 dp) centered vertically -->
    <Space android:id="@+id/dummy2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgGBEC"
        android:src="@drawable/gbhs"
        android:contentDescription="@string/app_name"
        android:scaleType="fitStart" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNotification"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/imgGBEC"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwitter"
        android:drawableLeft="@drawable/twitter"
        android:text="@string/Twitter"
        android:contentDescription="@string/Twitter"
        android:cropToPadding="false"
        android:layout_below="@+id/btnFacebook"
        android:layout_toRightOf="@+id/dummy1"
        android:layout_alignRight="@+id/btnFacebook"
        android:layout_alignEnd="@+id/btnFacebook"
        android:backgroundTint="#ff212121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFacebook"
        android:drawableLeft="@drawable/facebook"
        android:text="@string/Facebook"
        android:contentDescription="@string/Facebook"
        android:layout_below="@+id/btnAnnounce"
        android:layout_toRightOf="@+id/dummy1"
        android:layout_toLeftOf="@+id/dummy2"
        android:layout_toStartOf="@+id/dummy2"
        android:backgroundTint="#ff212121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGrades"
        android:drawableLeft="@drawable/svueaction"
        android:text="@string/Grades"
        android:contentDescription="@string/Grades"
        android:cropToPadding="false"
        android:layout_alignBottom="@+id/btnTwitter"
        android:layout_toRightOf="@+id/dummy2"
        android:layout_alignRight="@+id/btnTimes"
        android:layout_alignEnd="@+id/btnTimes"
        android:layout_alignTop="@+id/btnTwitter"
        android:backgroundTint="#ff212121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWeb"
        android:drawableLeft="@drawable/gblogo"
        android:text="@string/GBHSWeb"
        android:contentDescription="@string/Facebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/dummy2"
        android:backgroundTint="#ff212121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAnnounce"
        android:drawableLeft="@drawable/announce"
        android:text="@string/Announce"
        android:contentDescription="@string/Facebook"
        android:layout_below="@+id/imgGBEC"
        android:layout_toRightOf="@+id/dummy1"
        android:layout_alignRight="@+id/btnWeb"
        android:layout_alignEnd="@+id/btnWeb"
        android:backgroundTint="#ff212121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTimes"
        android:drawableLeft="@drawable/clock"
        android:text="@string/schedulemenu"
        android:contentDescription="@string/schedulemenu"
        android:layout_below="@+id/btnAnnounce"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/dummy2"
        android:layout_toEndOf="@+id/dummy2"
        android:backgroundTint="#ff212121" />

</RelativeLayout>
