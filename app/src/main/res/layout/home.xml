<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.grandblanchs.gbhs.home">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:name="com.grandblanchs.gbhs.twitter"
        android:id="@+id/twitterfragment"
        android:layout_below="@+id/txtTwitter" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:name="com.grandblanchs.gbhs.Admin"
        android:id="@+id/adminfragment"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAdmin" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.grandblanchs.gbhs.calendar"
        android:id="@+id/calfragment"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtCalendar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Twitter"
        android:id="@+id/txtTwitter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Admin"
        android:id="@+id/txtAdmin"
        android:gravity="center"
        android:layout_below="@+id/twitterfragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Calendar"
        android:id="@+id/txtCalendar"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/adminfragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
